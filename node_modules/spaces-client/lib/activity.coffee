class Activity
  Faker = require('faker')
  Resource = require('./resource')

  @showActivity = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    addlHeaders = {
      "Cookie": ["_social_navigator_session=" + sessionId, "path=/"],
      "Accept": "application/vnd.moxiesoft.spaces-v1+json"
    }
    Resource.getResource(site, userId, sessionId, 'activities/' + resourceId, addlHeaders, onsuccess, onfail)

  @createActivity = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, oncreate) ->
    data = {
      activity: {
        status: Faker.Lorem.sentences(1)
      }
    }
    Resource.createResource(site, userId, sessionId, 'activities', data, onsuccess, onfail, oncreate)

module.exports = exports = Activity