class Blog
  Faker = require('Faker')

  @create = (host, parentId, userId) ->
    Spaces = require('./spaces-client.js')
    data = {
      blog: {
        title: Faker.Lorem.sentences(1),
        body: Faker.Lorem.sentences(4)
      }
    }
    if parentId
      data['blog']['parent_id'] = parentId

    XMLHttpRequest = require("xmlhttprequest").XMLHttpRequest
    xhr = new XMLHttpRequest()
    xhr.setDisableHeaderCheck(true)
    xhr.open('POST', host + "/blogs", true)
    xhr.setRequestHeader("Content-Type", "application/json")
    xhr.setRequestHeader("Accept", "application/vnd.moxiesoft.spaces-v1+json")
    xhr.setRequestHeader("Cookie", ["_social_navigator_session=" + Spaces.Session.getSessionId(userId), "path=/"])
    xhr.onload = () ->
      if this.status == 201
        id = this.responseText.match(/.*"id":"(.*?)".*/)[1]
        Spaces.Session.addItem(userId, 'blog', id)
      else
        console.log("Blog.create ERROR: " + this.status + " - " + this.responseText)
    xhr.send(JSON.stringify(data))

  @createPost = (host, blogId, userId) ->
    console.log "Attempting to create a blog post in blog [" + blogId + "]"
    Spaces = require('./spaces-client.js')

    data = {
      blog_post: {
        title: Faker.Lorem.sentences(1),
        body: Faker.Lorem.sentences(20),
        parent_id: blogId
      }
    }

    XMLHttpRequest = require("xmlhttprequest").XMLHttpRequest
    xhr = new XMLHttpRequest()
    xhr.setDisableHeaderCheck(true)
    xhr.open('POST', host + "/blog_posts", true)
    xhr.setRequestHeader("Content-Type", "application/json")
    xhr.setRequestHeader("Accept", "application/vnd.moxiesoft.spaces-v1+json")
    xhr.setRequestHeader("Cookie", ["_social_navigator_session=" + Spaces.Session.getSessionId(userId), "path=/"])
    xhr.onload = () ->
      if this.status == 201
        id = this.responseText.match(/.*"id":"(.*)".*/)[1]
        Spaces.Session.addItem(userId, 'blogpost', id)
      else
        console.log("BlogPost.create ERROR: " + this.status + " - " + JSON.stringify(data))
    xhr.send(JSON.stringify(data))

module.exports = exports = Blog