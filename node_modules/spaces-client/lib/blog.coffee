class Blog
  Faker = require('faker')
  Resource = require('./resource')

  @createBlog = (site, sessionId, parentId, userId, onsuccess, onfail, oncreate) ->
    data = {
      blog: {
        title: Faker.Lorem.sentences(1),
        body: Faker.Lorem.sentences(4)
      }
    }
    data['blog']['parent_id'] = parentId if parentId
    Resource.createResource(site, userId, sessionId, 'blogs', data, onsuccess, onfail, oncreate)

  @updateBlog = (site, sessionId, refObjId, userId, onsuccess, onfail) ->
    data = {
      blog: {
        title: Faker.Lorem.sentences(1)
      }
    }
    Resource.editResource(site, userId, sessionId, 'blogs/' + refObjId, data, onsuccess, onfail)

  @deleteBlog = (site, sessionId, refObjId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'blogs/' + refObjId, onsuccess, onfail, ondestroy)

  @createBlogpost = (site, sessionId, blogId, userId, onsuccess, onfail, oncreate) ->
    data = {
      blog_post: {
        title: Faker.Lorem.sentences(1),
        body: Faker.Lorem.sentences(20),
        parent_id: blogId
      }
    }
    Resource.createResource(site, userId, sessionId, 'blog_posts', data, onsuccess, onfail, oncreate)

  @updateBlogpost = (site, sessionId, refObjId, userId, onsuccess, onfail) ->
    data = {
      blog_post: {
        body: Faker.Lorem.sentences(20)
      }
    }
    Resource.editResource(site, userId, sessionId, 'blog_posts/' + refObjId, data, onsuccess, onfail)

  @deleteBlogpost = (site, sessionId, refObjId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'blog_posts/' + refObjId, onsuccess, onfail, ondestroy)

module.exports = exports = Blog