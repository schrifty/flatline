class Forum
  Faker = require('faker')
  Resource = require('./resource')

  @createForum = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, oncreate) ->
    data = {
      discussion_archive: {
        name: Faker.Lorem.sentences(1),
        description: Faker.Lorem.sentences(4)
      }
    }

    data['discussion_archive']['parent_id'] = parentId if parentId
    Resource.createResource(site, userId, sessionId, 'discussion_archives', data, onsuccess, onfail, oncreate)

  @showForum = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    addlHeaders = {
      "Accept": "application/vnd.moxiesoft.spaces-v1+json",
      "Cookie": ["_social_navigator_session=" + sessionId, "path=/"]
    }
    Resource.getResource(site, userId, sessionId, 'discussion_archives/' + resourceId, addlHeaders, onsuccess, onfail)

  @updateForum = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    data = {
      discussion_archive: {
        description: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, sessionId, 'discussion_archives/' + resourceId, data, onsuccess, onfail)

  @deleteForum = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'discussion_archives/' + resourceId, onsuccess, onfail, ondestroy)

  @createDiscussion = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, oncreate) ->
    data = {
      discussion: {
        title: Faker.Lorem.sentences(1)
        body: Faker.Lorem.sentences(4)
        parent_id: parentId
      }
    }
    Resource.createResource(site, userId, sessionId, 'discussions', data, onsuccess, onfail, oncreate)

  @showDiscussion = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    addlHeaders = {
      "Accept": "application/vnd.moxiesoft.spaces-v1+json",
      "Cookie": ["_social_navigator_session=" + sessionId, "path=/"]
    }
    Resource.getResource(site, userId, sessionId, 'discussions/' + resourceId, addlHeaders, onsuccess, onfail)

  @updateDiscussion = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    data = {
      discussion: {
        body: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, sessionId, 'discussions/' + resourceId, data, onsuccess, onfail)

  @deleteDiscussion = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'discussions/' + resourceId, onsuccess, onfail, ondestroy)

module.exports = exports = Forum