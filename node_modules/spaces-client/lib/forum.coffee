class Forum
  Faker = require('faker')
  Resource = require('./resource')

  @createForum = (site, sessionId, parentId, userId, onsuccess, onfail, oncreate) ->
    data = {
      discussion_archive: {
        name: Faker.Lorem.sentences(1),
        description: Faker.Lorem.sentences(4)
      }
    }

    data['discussion_archive']['parent_id'] = parentId if parentId
    Resource.createResource(site, userId, sessionId, 'discussion_archives', data, onsuccess, onfail, oncreate)

  @updateForum = (site, sessionId, refObjId, userId, onsuccess, onfail) ->
    data = {
      discussion_archive: {
        description: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, sessionId, 'discussion_archives/' + refObjId, data, onsuccess, onfail)

  @deleteForum = (site, sessionId, refObjId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'discussion_archives/' + refObjId, onsuccess, onfail, ondestroy)

  @createDiscussion = (site, sessionId, forumId, userId, onsuccess, onfail, oncreate) ->
    data = {
      discussion: {
        title: Faker.Lorem.sentences(1)
        body: Faker.Lorem.sentences(4)
        parent_id: forumId
      }
    }
    Resource.createResource(site, userId, sessionId, 'discussions', data, onsuccess, onfail, oncreate)

  @updateDiscussion = (site, sessionId, refObjId, userId, onsuccess, onfail) ->
    data = {
      discussion: {
        body: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, sessionId, 'discussions/' + refObjId, data, onsuccess, onfail)

  @deleteDiscussion = (site, sessionId, refObjId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'discussions/' + refObjId, onsuccess, onfail, ondestroy)

module.exports = exports = Forum