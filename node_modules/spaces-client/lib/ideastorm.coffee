class Ideastorm
  Faker = require('faker')
  Resource = require('./resource')

  @createIdeastorm = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, oncreate) ->
    data = {
      ideastorm: {
        name: Faker.Lorem.sentences(1),
        description: Faker.Lorem.sentences(4),
        close_at: new Date().toISOString()
      }
    }
    data['ideastorm']['parent_id'] = parentId if parentId
    Resource.createResource(site, userId, sessionId, 'ideastorms', data, onsuccess, onfail, oncreate)

  @showIdeastorm = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    addlHeaders = {
      "Accept": "application/vnd.moxiesoft.spaces-v1+json",
      "Cookie": ["_social_navigator_session=" + sessionId, "path=/"]
    }
    Resource.getResource(site, userId, sessionId, 'ideastorms/' + resourceId, addlHeaders, ((res) ->
      onsuccess()
    ), (() ->
      onfail()
    ))

  @updateIdeastorm = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    data = {
      ideastorm: {
        description: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, sessionId, 'ideastorms/' + resourceId, data, onsuccess, onfail)

  @deleteIdeastorm = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'ideastorms/' + resourceId, onsuccess, onfail, ondestroy)

  @createIdea = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, oncreate) ->
    data = {
      idea: {
        title: Faker.Lorem.sentences(1)
        body: Faker.Lorem.sentences(4)
        parent_id: parentId
      }
    }
    Resource.createResource(site, userId, sessionId, 'ideas', data, onsuccess, onfail, oncreate)

  @showIdea = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    addlHeaders = {
      "Accept": "application/vnd.moxiesoft.spaces-v1+json",
      "Cookie": ["_social_navigator_session=" + sessionId, "path=/"]
    }
    Resource.getResource(site, userId, sessionId, 'ideas/' + resourceId, addlHeaders, ((res) ->
      onsuccess()
    ), (() ->
      onfail()
    ))

  @updateIdea = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail) ->
    data = {
      idea: {
        body: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, sessionId, 'ideas/' + resourceId, data, onsuccess, onfail)

  @deleteIdea = (site, sessionId, resourceId, parentId, userId, onsuccess, onfail, ondestroy) ->
    Resource.deleteResource(site, userId, sessionId, 'ideas/' + resourceId, onsuccess, onfail, ondestroy)

module.exports = exports = Ideastorm