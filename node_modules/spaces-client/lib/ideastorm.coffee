Faker = require('faker')
$ = require('jquery')
Resource = require('./resource.js')

class Ideastorm
  @create = (site, parentId, userId) ->
    data = {
      ideastorm: {
        name: Faker.Lorem.sentences(1),
        description: Faker.Lorem.sentences(4)
      }
    }
    data['ideastorm']['parent_id'] = parentId if parentId
    Resource.createResource(site, userId, 'ideastorm', data)

  @updateIdeastorm = (site, parentId, userId) ->
    data = {
      ideastorm: {
        description: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, 'ideastorm', data)

  @deleteIdeastorm = (site, parentId, userId) ->
    Resource.deleteResource(site, userId, 'ideastorm')

  @createIdea = (site, ideastormId, userId) ->
    data = {
      idea: {
        title: Faker.Lorem.sentences(1)
        body: Faker.Lorem.sentences(4)
      }
    }
    data['idea']['parent_id'] = ideastormId if ideastormId
    Resource.createResource(site, userId, 'idea', data)

  @updateIdea = (site, ideastormId, userId) ->
    data = {
      idea: {
        body: Faker.Lorem.sentences(4)
      }
    }
    Resource.editResource(site, userId, 'idea', data)

  @deleteIdea = (site, ideastormId, userId) ->
    Resource.deleteResource(site, userId, 'idea')

module.exports = exports = Ideastorm