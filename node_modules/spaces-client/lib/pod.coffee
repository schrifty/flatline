class Pod

  @getPods = (site, onsuccess) ->
    headers = {
      "API-KEY": Spaces.apiKey
    }
    Resource.getResource(host, "system", null, '/api/pods', headers, ((pods) ->
      pod = $.grep(pods, ((pod) ->
        pod.id == site.pod_id
      ))
      onsuccess(pod.app_servers.length, pod.job_servers.length)
    ))

