
class Session
  @sessions = {}
  @adminId = ""

  @setAdminId = (userId) ->
    @adminId = userId

  @setSessionId = (userId, id) ->
    @sessions[userId] = {} unless @sessions[userId]
    @sessions[userId]["id"] = id

  @getSessionId = (site, userId) ->
    Spaces = require('./spaces-client.js')
    if session = @sessions[userId]
      if sessionId = session["id"]
        return sessionId
      else
        Spaces.logger.error("[%s][%s] Couldn't find session ID", site.site_id, userId)
    else
      Spaces.logger.error("[%s][%s] Couldn't find user session", site.site_id, userId)

  @getRandomUserItemIdOfType = (site, userId, type) ->
    Spaces = require('./spaces-client.js')
    if @sessions[userId]
      if list = @sessions[userId][type]
        return list[Math.floor(Math.random() * list.length)]
      else
        Spaces.logger.warn("[%s][%s] user doesn't have a valid %s", site.site_id, userId, type)
    else
      Spaces.logger.error("[%s][%s] Couldn't find user session", site.site_id, userId)

  @getRandomSiteItemIdOfType = (site, type) ->
    Spaces = require('./spaces-client.js')
    if @sessions[site.site_id]
      if list = @sessions[site.site_id][type]
        return list[Math.floor(Math.random() * list.length)]
      else
        Spaces.logger.warn("[%s][Unknown User] site doesn't have a valid %s", site.site_id, type)

  @addItem = (site, userId, type, item) ->
    Spaces = require('./spaces-client.js')
    Spaces.logger.debug("[%s][%s] Added %s [%s]", site.site_id, userId, type, item)
    if @sessions[userId]
      @sessions[userId][type] = [] unless @sessions[userId][type]
      @sessions[userId][type].push item
    else
      Spaces.logger.error("[%s][%s] user session not found", site.site_id, userId)

    # store the item for the site as well
    @sessions[site.site_id] = {} unless @sessions[site.site_id]
    @sessions[site.site_id][type] = [] unless @sessions[site.site_id][type]
    @sessions[site.site_id][type].push item

module.exports = exports = Session